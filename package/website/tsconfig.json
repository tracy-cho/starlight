{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": "./src"
  },
  "include": [
    "./src"
  ]
}
